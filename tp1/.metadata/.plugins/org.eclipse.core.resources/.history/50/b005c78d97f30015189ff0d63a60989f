package ar.edu.utn.dds.k3001.grupo3.macowins;

public class Prenda {
	private static double valorNegocio = 1;
	private Articulo articulo;
	
	public double getValorNegocio() {
		return valorNegocio;
	}

	public static void setValorNegocio(double valorNegocio) {
		Prenda.valorNegocio = valorNegocio;
	}
	
	public double precioFinal(){
		return (getValorNegocio()+articulo.getPrecio());
	}

	public Articulo getArticulo() {
		return articulo;
	}

	public void setArticulo(Articulo articulo) {
		this.articulo = articulo;
	}
}
